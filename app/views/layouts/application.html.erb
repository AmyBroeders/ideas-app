<!DOCTYPE html>
<html>
  <head>
    <title>IdeasApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if @current_user %>
    <p>Logged in as <b><%= @current_user.username %></b> | <a href="/logout">Log out</a></p>
    <% else %>
    <p><a href="/users/new">Sign up</a> | <a href="/login">Log in</a></p>
    <% end %>
    <%= yield %>
  </body>
</html>
